build_mkdocs:
  runs-on: ubuntu-latest
 
  steps:
    - name: Checkout code
      uses: actions/checkout@v4
      with:
        fetch-depth: 0
    - uses: actions/setup-python@v5
      with:
        python-version: 3.9
    - run: pip install \
          mkdocs-material mkdocs-material-extensions mkdocs-awesome-pages-plugin mkdocs-git-revision-date-localized-plugin mkdocs-pymdownx-material-extras mkdocstrings
    - run: mkdocs gh-deploy --force
